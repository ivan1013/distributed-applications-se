@model eSportsManagementSystem.ViewModels.PlayerViewModel

@{
    ViewData["Title"] = "Delete Player";
}

<h1>Delete Player</h1>

<h3>Are you sure you want to delete this player?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@(Model.LastName ?? "N/A")</dd>

        <dt class="col-sm-2">Birth Date</dt>
        <dd class="col-sm-10">@(Model.BirthDate?.ToString("yyyy-MM-dd") ?? "N/A")</dd>

        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@(Model.Role ?? "N/A")</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@(Model.Rating?.ToString("F1") ?? "N/A")</dd>

        <dt class="col-sm-2">Team</dt>
        <dd class="col-sm-10">@(Model.TeamName ?? "No Team")</dd>

        <dt class="col-sm-2">Tournament Count</dt>
        <dd class="col-sm-10">@Model.TournamentCount</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PlayerId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
