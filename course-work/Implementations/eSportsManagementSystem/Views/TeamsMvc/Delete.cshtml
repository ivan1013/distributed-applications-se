@model eSportsManagementSystem.ViewModels.TeamViewModel
@{
    ViewData["Title"] = "Delete Team";
}
<h2>Delete Team</h2>
<h4>Are you sure you want to delete this team?</h4>
<div>    <h5>@Model.Name</h5>
    <dl class="row">
        <dt class="col-sm-2">Region</dt>
        <dd class="col-sm-10">@(Model.Region ?? "N/A")</dd>
        <dt class="col-sm-2">Founded Date</dt>
        <dd class="col-sm-10">@(Model.FoundedDate?.ToString("yyyy-MM-dd") ?? "N/A")</dd>
        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@(Model.Rating?.ToString("F1") ?? "N/A")</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @if (Model.IsActive)
            {
                <i class="bi bi-check-circle-fill text-success" title="Active"></i>
                <span class="ms-1">Active</span>
            }
            else
            {
                <i class="bi bi-x-circle-fill text-danger" title="Inactive"></i>
                <span class="ms-1">Inactive</span>
            }
        </dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="TeamId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
