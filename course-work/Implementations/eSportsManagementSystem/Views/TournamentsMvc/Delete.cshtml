@model eSportsManagementSystem.ViewModels.TournamentViewModel

@{
    ViewData["Title"] = "Delete Tournament";
}

<h1>Delete Tournament</h1>

<h3>Are you sure you want to delete this tournament?</h3>
<div>
    <hr />    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@(Model.StartDate?.ToString("yyyy-MM-dd") ?? "N/A")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@(Model.EndDate?.ToString("yyyy-MM-dd") ?? "N/A")</dd>

        <dt class="col-sm-2">Prize Pool</dt>
        <dd class="col-sm-10">@(Model.PrizePool.HasValue ? $"{Model.PrizePool:N0} лв." : "N/A")</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@(Model.Location ?? "N/A")</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TournamentId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
